<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ContactUsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="15dp"
        android:text="We'd like to hear from you"
        android:textSize="22sp"
        android:textStyle="bold"
        app:fontFamily="@font/lato" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:padding="15dp"
        android:background="@color/colorBg"
        android:textSize="18sp"
        android:gravity="center"
        android:text="For all kind of queries related to course zenclass and other platform related information"
        app:fontFamily="@font/lato" />
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_arrow_forward"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:padding="15dp"
        android:background="@color/colorBg"
        android:textSize="18sp"
        android:text="You will get a reply back from us within 48 hours"
        app:fontFamily="@font/lato" />
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_chat_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Chat with us"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="(9AM to 9PM)"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_arrow_forward"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_device_hub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Follow us"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/twitter"
            android:layout_marginRight="15dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <ImageView
            android:src="@drawable/facebook"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/instagram"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/telegram"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="10dp"
        android:text="Visit Us"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/lato" />
</LinearLayout>